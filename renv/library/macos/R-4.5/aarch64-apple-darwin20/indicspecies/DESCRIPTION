Package: indicspecies
Type: Package
Title: Relationship Between Species and Groups of Sites
Version: 1.8.0
Date: 2025-02-20
Authors@R: c(
	person('Miquel', 'De Cáceres', role=c('aut','cre'),
	email='miquelcaceres@gmail.com', comment = c(ORCID = "0000-0001-7132-2080")),
	person('Florian', 'Jansen', role='aut'),
